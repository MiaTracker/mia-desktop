{
  "build": {
    "beforeBuildCommand": "(cd mia-web; ng build)",
    "beforeDevCommand": "(cd mia-web; ng serve)",
    "devPath": "http://localhost:4200/",
    "distDir": "../mia-web/dist/mia-web/browser",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Mia",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "shell": {
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "category": "Entertainment",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.nara.mia-desktop",
      "longDescription": "Mia movie and TV show tracker",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "Mia movie and TV show tracker",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "Mia",
        "width": 1400
      }
    ]
  }
}
